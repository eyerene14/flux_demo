apiVersion: apps/v1
kind: Deployment
metadata:
  name: mongodbwithannotations
  namespace: mongodb
  annotations:
    reloader.stakater.com/auto: "true"
spec:
  template:
    metadata:
      labels:
        app: mongodbwithannotations
    spec:
      containers:
        - name: mongodbwithannotations
          image: mongo:4.2.23
          readinessProbe:
            enabled: false
          livenessProbe:
            enabled: false
          persistence:
            mountPath: /data/db
          envFrom:
            - configMapRef:
                name: mongodb-config-wa
            - secretRef:
                name: mongodb-secret-wa